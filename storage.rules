
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Les images de profil des utilisateurs
    // Seul l'utilisateur propriétaire peut lire, écrire, mettre à jour son image
    match /users/{userId}/profilePicture/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Les images des produits
    // Seul un utilisateur authentifié peut téléverser une image de produit.
    // Le nom du fichier doit correspondre à l'ID du produit pour simplifier la gestion.
    match /products/{productId}/{fileName} {
      allow read; // Tout le monde peut voir les images des produits
      allow write: if request.auth != null;
    }
  }
}
